@model IEnumerable<ALPS.MVC.ViewModels.Agent>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
        <tr>
            <td>
                <input type="button" value="Select" class="btn btn-sm btn-primary" onclick="return updateParent(@item.Id,'@item.FirstName','@item.LastName');" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
        </tr>
}
    </tbody>
</table>

<script type="text/javascript">
    function updateParent(id,fname,lname) {
        opener.document.getElementById("AgentId").value = id;
        opener.document.getElementById("AgentName").value = fname + " " + lname;
        window.close();
        return false;
    }
</script>
